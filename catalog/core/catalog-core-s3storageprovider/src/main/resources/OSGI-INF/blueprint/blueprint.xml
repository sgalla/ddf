<blueprint xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <ext:property-placeholder/>

    <bean id="s3StoreService" class="org.codice.ddf.catalog.content.impl.S3StorageProvider">
        <cm:managed-properties
                persistent-id="org.codice.ddf.catalog.content.impl.S3StorageProvider"
                update-strategy="container-managed"/>
        <property name="mimeTypeMapper" ref="mimeTypeMapper"/>
        <property name="s3Endpoint" value="s3.us-gov-west-1.amazonaws.com"/>
        <property name="s3Region" value="us-gov-west-1"/>
        <property name="s3Bucket" value="dibtest"/>
        <property name="contentPrefix" value="data/content/store/"/>
        <property name="s3AccessKey" value=""/>
        <property name="s3SecretKey" value=""/>
    </bean>

    <service ref="s3StoreService" interface="ddf.catalog.content.StorageProvider"/>

    <reference id="mimeTypeMapper" interface="ddf.mime.MimeTypeMapper"/>

</blueprint>